.t-c
  text-align center
.t-l
  text-align left
.t-r
  text-align right


// cursor屬性部分
.c-p
  cursor pointer
.c-a
  cursor auto
.c-n
  cursor not-allowed
.c-d
  cursor default

.t-i-2
  text-indent: 2em

.t-d-u
  text-decoration underline
  
//英文大写
.t-t-u
  text-transform:uppercase
// 單行省略號
.white-1{
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
//两行省略号
.white-2{
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
    word-break: keep-all;
    word-wrap: break-word; 
}

.w-b-word
  word-break break-word
.w-b-keep
  word-break keep-all